<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

  <system.diagnostics>
    <trace autoflush="true"/>
    <sources>
      <source name="AIT.Tools.VisualStudioTextTransform" switchValue="All" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="textListener"/>
          <add name="consoleListener" />
          <add name="xmlListener" />
          <remove name="Default"/>
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="textListener"
        type="System.Diagnostics.TextWriterTraceListener"
        initializeData="AIT.Tools.VisualStudioTextTransform.log">
        <filter type="System.Diagnostics.EventTypeFilter"
          initializeData="All"/>
      </add>
      <add name="consoleListener"
        type="System.Diagnostics.ConsoleTraceListener">
        <filter type="System.Diagnostics.EventTypeFilter"
          initializeData="All"/>
      </add>
      <add name="xmlListener"
                type="System.Diagnostics.XmlWriterTraceListener"
                initializeData="AIT.Tools.VisualStudioTextTransform.svclog" >
        <filter type="System.Diagnostics.EventTypeFilter"
          initializeData="All"/>
      </add>
    </sharedListeners>
  </system.diagnostics>
</configuration>